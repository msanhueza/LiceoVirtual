<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:orientation="vertical"
    p1:layout_width="match_parent"
    p1:layout_height="match_parent"
    p1:padding="20dp"
    p1:id="@+id/linearLayout1"
    p1:background="@drawable/lvbackgroundresultado">
    <TextView xmlns:tools="http://schemas.android.com/tools"
        p1:text=""
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:textSize="20dp"
        p1:textColor="#ffffff"
        p1:id="@+id/tvTextoMensajeResultado"
        p1:layout_width="match_parent"
        p1:layout_height="0dp"
        p1:gravity="center"
        tools:text="Felicitaciones, has completado la trivia"
        p1:layout_marginLeft="0.0dp"
        p1:layout_weight="2"
        p1:textStyle="bold"
        p1:shadowColor="#292929"
        p1:shadowDx="0"
        p1:shadowDy="0"
        p1:shadowRadius="1" />
    <TextView
        p1:text="80%"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:id="@+id/tvPuntajeMensajeResultado"
        p1:gravity="center"
        p1:textSize="15dp"
        p1:layout_width="match_parent"
        p1:layout_height="0dp"
        p1:layout_weight="2"
        p1:textColor="#ffffffff" />
    <LinearLayout
        p1:orientation="horizontal"
        p1:minWidth="25px"
        p1:minHeight="25px"
        p1:layout_width="match_parent"
        p1:layout_height="0dp"
        p1:id="@+id/linearLayout6"
        p1:layout_weight="3">
        <ImageView
            p1:src="@drawable/student"
            p1:layout_width="match_parent"
            p1:layout_height="match_parent"
            p1:id="@+id/imgMensajeResultadoStudent"
            p1:layout_weight="1"
            p1:padding="5dp" />
    </LinearLayout>
    <Button
        p1:text="Aceptar"
        p1:id="@+id/btnAceptarTerminoTrivia"
        p1:layout_width="match_parent"
        p1:layout_height="wrap_content"
        style="@style/btn_white_large" />
</LinearLayout>