<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:orientation="vertical"
    p1:layout_width="match_parent"
    p1:layout_height="match_parent"
    p1:padding="20dp"
    p1:id="@+id/linearLayout1">
    <LinearLayout
        p1:orientation="horizontal"
        p1:layout_width="match_parent"
        p1:layout_height="wrap_content"
        p1:id="@+id/linearLayout2">
        <LinearLayout
            p1:orientation="vertical"
            p1:layout_width="100dp"
            p1:layout_height="100dp"
            p1:id="@+id/linearLayout3">
            <ImageView
                p1:src="@drawable/estudiante"
                p1:layout_width="match_parent"
                p1:layout_height="wrap_content"
                p1:id="@+id/imageView1" />
        </LinearLayout>
        <LinearLayout
            p1:orientation="vertical"
            p1:layout_width="wrap_content"
            p1:layout_height="wrap_content"
            p1:id="@+id/linearLayout4"
            p1:padding="20dp"
            p1:minWidth="25px"
            p1:minHeight="25px">
            <TextView
                p1:text="Â¡HAZ COMPLETADO LA TRIVIA DE PRIMERO MEDIO!"
                p1:textAppearance="?android:attr/textAppearanceLarge"
                p1:layout_width="match_parent"
                p1:layout_height="wrap_content"
                p1:id="@+id/textView1" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        p1:orientation="vertical"
        p1:layout_width="match_parent"
        p1:layout_height="250dp"
        p1:id="@+id/linearLayout5"
        p1:background="@drawable/nota"
        p1:padding="20dp"
        p1:gravity="center">
        <TextView
            p1:text="80%"
            p1:textAppearance="?android:attr/textAppearanceLarge"
            p1:layout_width="match_parent"
            p1:layout_height="wrap_content"
            p1:id="@+id/textView2"
            p1:gravity="center"
            p1:textSize="100dp" />
    </RelativeLayout>
    <LinearLayout
        p1:orientation="vertical"
        p1:layout_width="match_parent"
        p1:layout_height="wrap_content"
        p1:id="@+id/linearLayout6"
        p1:padding="20dp">
        <Button
            p1:text="Aceptar"
            p1:layout_width="match_parent"
            p1:layout_height="wrap_content"
            p1:id="@+id/button1" />
    </LinearLayout>
</LinearLayout>