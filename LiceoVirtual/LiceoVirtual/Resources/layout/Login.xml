<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:background="@color/white"
    p1:layout_width="match_parent"
    p1:layout_height="match_parent"
    p1:gravity="center"
    p1:orientation="vertical"
    p1:paddingBottom="@dimen/pad_20dp"
    p1:paddingLeft="@dimen/pad_15dp"
    p1:paddingRight="@dimen/pad_15dp"
    p1:paddingTop="@dimen/pad_20dp">
    <ImageView
        p1:id="@+id/imgLogo"
        p1:layout_width="wrap_content"
        p1:layout_height="0dp"
        p1:src="@drawable/logoLogin"
        p1:layout_weight="1"
        p1:layout_gravity="center"
        p1:paddingRight="@dimen/pad_10dp"
        p1:paddingLeft="@dimen/pad_10dp"
        p1:adjustViewBounds="true"
        p1:scaleType="centerInside" />
    <LinearLayout
        p1:orientation="vertical"
        p1:layout_width="match_parent"
        p1:layout_height="0dp"
        p1:id="@+id/linearLayout1"
        p1:layout_weight="2"
        p1:gravity="center">
        <EditText
            p1:id="@+id/edtRut"
            style="@style/editext_graybg"
            p1:layout_width="wrap_content"
            p1:layout_height="wrap_content"
            p1:drawableLeft="@drawable/ic_username"
            p1:hint="@string/rut">
            <requestFocus
                p1:id="@+id/requestFocus1" />
        </EditText>
        <EditText
            p1:id="@+id/edtContrasena"
            style="@style/editext_graybg"
            p1:layout_width="wrap_content"
            p1:layout_height="wrap_content"
            p1:layout_marginBottom="@dimen/pad_20dp"
            p1:layout_marginTop="@dimen/pad_5dp"
            p1:drawableLeft="@drawable/ic_pwd"
            p1:hint="@string/password"
            p1:inputType="textPassword" />
        <CheckBox
            p1:text="Recordar SesiÃ³n"
            p1:layout_width="wrap_content"
            p1:layout_height="wrap_content"
            p1:id="@+id/cbxRecordarContrasena"
            p1:paddingLeft="@dimen/pad_10dp"
            p1:paddingRight="@dimen/pad_10dp" />
        <LinearLayout
            p1:id="@+id/main"
            p1:layout_width="wrap_content"
            p1:layout_height="wrap_content"
            p1:orientation="horizontal">
            <Button
                p1:id="@+id/btnLogin"
                style="@style/btn_white_large"
                p1:layout_width="wrap_content"
                p1:layout_height="wrap_content"
                p1:text="@string/log_in" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>