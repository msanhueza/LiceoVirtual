<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:orientation="vertical"
    p1:layout_width="match_parent"
    p1:layout_height="match_parent"
    p1:id="@+id/linearLayout1"
    p1:padding="15dp"
    p1:background="@drawable/lvbackgroundmenu">
    <LinearLayout
        p1:orientation="horizontal"
        p1:minWidth="25px"
        p1:minHeight="25px"
        p1:layout_width="match_parent"
        p1:layout_height="0dp"
        p1:id="@+id/linearLayout2"
        p1:layout_weight="0.3">
        <TextView
            p1:text=""
            p1:layout_width="wrap_content"
            p1:layout_height="match_parent"
            p1:id="@+id/tvCorrectas" />
        <TextView
            p1:text=""
            p1:layout_width="fill_parent"
            p1:layout_height="match_parent"
            p1:id="@+id/tvIncorrectas"
            p1:gravity="right" />
    </LinearLayout>
    <RelativeLayout
        p1:orientation="vertical"
        p1:layout_width="match_parent"
        p1:layout_height="0dp"
        p1:id="@+id/barraAvance"
        p1:padding="0dip"
        p1:layout_weight="0.5">
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            p1:layout_width="match_parent"
            p1:layout_height="30dp"
            p1:id="@+id/pbPregunta"
            p1:layout_centerInParent="true"
            p1:progressDrawable="@drawable/LVProgress" />
        <TextView xmlns:tools="http://schemas.android.com/tools"
            p1:id="@+id/tvProgreso"
            p1:textAppearance="?android:attr/textAppearanceLarge"
            p1:layout_width="wrap_content"
            p1:layout_height="30dp"
            p1:layout_centerInParent="true"
            p1:textColor="#FFFFFF"
            tools:text="10%" />
    </RelativeLayout>
    <LinearLayout
        p1:id="@+id/fragment_container"
        p1:orientation="vertical"
        p1:layout_width="fill_parent"
        p1:layout_height="0dp"
        p1:layout_weight="5" />
    <Button xmlns:tools="http://schemas.android.com/tools"
        p1:text="Siguiente"
        style="@style/btn_white_large"
        p1:layout_width="match_parent"
        p1:layout_height="wrap_content"
        p1:id="@+id/btnPreguntaSiguiente"
        tools:visibility="visible" />
</LinearLayout>