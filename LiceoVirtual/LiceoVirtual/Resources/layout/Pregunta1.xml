    p1:layout_width="match_parent"
    p1:layout_height="match_parent"
    p1:id="@+id/linearLayout1">
    <LinearLayout
        p1:orientation="horizontal"
        p1:layout_width="match_parent"
        p1:id="@+id/barraAvance"
        p1:layout_weight="2" />
    <LinearLayout
        p1:orientation="horizontal"
        p1:layout_width="match_parent"
        p1:id="@+id/pregunta"
        p1:layout_weight="2" />
    <LinearLayout
        p1:orientation="horizontal"
        p1:layout_width="match_parent"
        p1:id="@+id/respuesta"
        p1:layout_weight="1" />
</LinearLayout>