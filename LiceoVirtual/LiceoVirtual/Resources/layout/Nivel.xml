<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:orientation="vertical"
    p1:layout_width="match_parent"
    p1:layout_height="match_parent"
    p1:id="@+id/linearLayout1"
    p1:background="@drawable/LVBackground">
    <LinearLayout
        p1:orientation="vertical"
        p1:layout_width="match_parent"
        p1:layout_height="0dp"
        p1:id="@+id/linearLayout2"
        p1:fitsSystemWindows="false"
        p1:layout_weight="1"
        p1:minWidth="25px"
        p1:minHeight="25px"
        p1:gravity="center"
        p1:padding="10dp">
        <ImageView
            p1:id="@+id/imgLogo"
            p1:layout_width="250px"
            p1:layout_height="250px"
            p1:src="@drawable/logoBlanco" />
        <TextView
            p1:text="www.liceovirtual.utalca.cl"
            p1:textAppearance="?android:attr/textAppearanceMedium"
            p1:layout_width="match_parent"
            p1:layout_height="match_parent"
            p1:id="@+id/textView1"
            p1:textColor="#ffffffff"
            p1:shadowColor="#abbae1e5"
            p1:shadowRadius="3"
            p1:shadowDx="1"
            p1:shadowDy="1"
            p1:layout_weight="1"
            p1:gravity="center" />
    </LinearLayout>
    <LinearLayout
        p1:orientation="horizontal"
        p1:layout_width="match_parent"
        p1:layout_height="0dp"
        p1:id="@+id/linearLayout2"
        p1:layout_weight="2"
        p1:layout_marginLeft="2dp"
        p1:layout_marginRight="2dp"
        p1:layout_marginBottom="2dp">
        <LinearLayout
            p1:orientation="vertical"
            p1:minWidth="25px"
            p1:minHeight="25px"
            p1:layout_width="0dp"
            p1:layout_height="match_parent"
            p1:id="@+id/linearLayout3"
            p1:layout_weight="1">
            <Button
                p1:text="1ยบ"
                p1:id="@+id/btn1"
                p1:layout_width="match_parent"
                p1:layout_height="0dp"
                p1:layout_weight="1"
                p1:textSize="35sp"
                p1:background="@drawable/LVButton"
                p1:layout_margin="1dp" />
            <Button
                p1:text="3ยบ"
                p1:id="@+id/btn3"
                p1:layout_width="match_parent"
                p1:layout_height="0dp"
                p1:layout_weight="1"
                p1:textSize="35sp"
                p1:background="@drawable/LVBlockedButton"
                p1:layout_margin="1dp" />
        </LinearLayout>
        <LinearLayout
            p1:orientation="vertical"
            p1:minWidth="25px"
            p1:minHeight="25px"
            p1:layout_width="0dp"
            p1:layout_height="match_parent"
            p1:id="@+id/linearLayout4"
            p1:layout_weight="1">
            <Button
                p1:text="2ยบ"
                p1:id="@+id/btn2"
                p1:layout_width="match_parent"
                p1:layout_height="0dp"
                p1:layout_weight="1"
                p1:textSize="35sp"
                p1:background="@drawable/LVButton"
                p1:layout_margin="1dp" />
            <Button
                p1:text="4ยบ"
                p1:id="@+id/btn4"
                p1:layout_width="match_parent"
                p1:layout_height="0dp"
                p1:layout_weight="1"
                p1:textSize="35sp"
                p1:background="@drawable/LVBlockedButton"
                p1:layout_margin="1dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>