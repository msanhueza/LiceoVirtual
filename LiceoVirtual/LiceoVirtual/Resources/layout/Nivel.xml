<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:orientation="vertical"
    p1:layout_width="match_parent"
    p1:layout_height="match_parent"
    p1:id="@+id/linearLayout1"
    p1:background="#ffffffff">
    <LinearLayout
        p1:orientation="horizontal"
        p1:layout_width="match_parent"
        p1:layout_height="0dp"
        p1:id="@+id/linearLayout2"
        p1:fitsSystemWindows="false"
        p1:minWidth="25px"
        p1:minHeight="25px"
        p1:layout_gravity="center"
        p1:background="@drawable/pizarron"
        p1:layout_weight="50">
        <TextView
            p1:text="Selecciona el nivel que deseas jugar.\n Necesitas responder correctamente 10 preguntas para pasar de nivel, para esto solo te puedes equivocar 2 veces.\n ¡Buena suerte! "
            p1:textAppearance="?android:attr/textAppearanceMedium"
            p1:layout_width="0dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/textView1"
            p1:shadowColor="#abbae1e5"
            p1:shadowRadius="3"
            p1:shadowDx="1"
            p1:shadowDy="1"
            p1:gravity="fill_horizontal"
            p1:layout_weight="2"
            p1:textSize="18dp"
            p1:includeFontPadding="true"
            p1:textColor="#ffffffff"
            p1:paddingTop="@dimen/pad_10dp"
            p1:paddingBottom="@dimen/pad_10dp"
            p1:paddingLeft="@dimen/pad_20dp"
            p1:textAlignment="gravity"
            p1:layout_gravity="center_horizontal"
            p1:layout_marginTop="10dp" />
        <ImageView
            p1:src="@drawable/student"
            p1:layout_width="0dp"
            p1:layout_height="match_parent"
            p1:id="@+id/imageView1"
            p1:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        p1:orientation="horizontal"
        p1:layout_width="match_parent"
        p1:layout_height="0dp"
        p1:id="@+id/linearLayout2"
        p1:layout_weight="40"
        p1:layout_marginLeft="2dp"
        p1:layout_marginRight="2dp"
        p1:layout_marginBottom="2dp"
        p1:layout_margin="10dp">
        <LinearLayout
            p1:orientation="vertical"
            p1:minWidth="25px"
            p1:minHeight="25px"
            p1:layout_width="0dp"
            p1:layout_height="match_parent"
            p1:id="@+id/linearLayout3"
            p1:layout_weight="1"
            p1:layout_marginRight="10dp">
            <Button
                p1:text="1º"
                p1:id="@+id/btn1"
                p1:layout_width="match_parent"
                p1:layout_height="0dp"
                p1:layout_weight="1"
                p1:textSize="35sp"
                p1:background="@drawable/LVButton"
                p1:textColor="#ffffffff"
                p1:layout_marginBottom="10dp" />
            <Button xmlns:tools="http://schemas.android.com/tools"
                p1:id="@+id/btn3"
                p1:layout_width="match_parent"
                p1:layout_height="0dp"
                p1:layout_weight="1"
                p1:textSize="35sp"
                p1:layout_margin="1dp"
                p1:background="@drawable/LVButton"
                p1:text="3°"
                p1:textColor="#ffffffff" />
        </LinearLayout>
        <LinearLayout
            p1:orientation="vertical"
            p1:minWidth="25px"
            p1:minHeight="25px"
            p1:layout_width="0dp"
            p1:layout_height="match_parent"
            p1:id="@+id/linearLayout4"
            p1:layout_weight="1">
            <Button
                p1:id="@+id/btn2"
                p1:layout_width="match_parent"
                p1:layout_height="0dp"
                p1:layout_weight="1"
                p1:textSize="35sp"
                p1:background="@drawable/LVButton"
                p1:textColor="#ffffffff"
                p1:text="2°"
                p1:layout_marginBottom="10dp" />
            <Button
                p1:id="@+id/btn4"
                p1:layout_width="match_parent"
                p1:layout_height="0dp"
                p1:layout_weight="1"
                p1:textSize="35sp"
                p1:background="@drawable/LVBlockedButton"
                p1:layout_margin="1dp"
                p1:text="4°"
                p1:textColor="#ffffffff"
                p1:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>